 <properties>
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>
    </properties>
    
     <build>
  <plugins>
   <!-- <plugin>
      <groupId>org.apache.maven.plugins</groupId>
      <artifactId>maven-surefire-plugin</artifactId>
      <version>3.0.0-M5</version>  Use latest version 
    </plugin>-->
    
      <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-compiler-plugin</artifactId>
            <version>3.8.1</version> <!-- Ensure you're using a compatible version -->
            <configuration>
                <source>17</source> <!-- Set the source version -->
                <target>17</target> <!-- Set the target version -->
                <compilerArgs>
                    <arg>--add-exports</arg>
                    <arg>jdk.compiler/com.sun.tools.javac.processing=ALL-UNNAMED</arg>
                </compilerArgs>
            </configuration>
        </plugin>
    
     <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>3.0.0-M5</version> <!-- Adjust the version as needed -->
        <configuration>
            <useFile>false</useFile> <!-- Optional: Set to false to avoid creating separate files for each test -->
            <forkCount>1</forkCount> <!-- Adjust fork count for parallel execution -->
            <reuseForks>true</reuseForks> <!-- Optional: Reuse forked JVM for tests -->
        </configuration>
    </plugin>
  </plugins>
</build>
  
